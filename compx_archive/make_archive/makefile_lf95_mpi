#	zblock.f  zcunix.f  zfreya.F    zgauss.f   znonsym.f 
#	zblock.f  zcunix.f  zfreya.F    zgauss.f    dropfile.c znonsym.f 
OBJECTS   = $(SOURCES:.f=.o)
LOCATION  =  -L/usr/local/netcdf-3.5.0/lib -L/usr/X11R6/lib -L/usr/local/pgplot  -L/usr/X11R6/lib -L/usr/lib/gcc-lib/i386-redhat-linux/3.2
#LIBRARIES = -lpgplot -lX11 -lm -lnetcdf -llapack -lblas -lg2c 
LIBRARIES = -lpgplot_lf95 -lX11 -lm -lnetcdf -llapack_lf95 -lblas_lf95
#DEBUG     = -g -Mbounds   HAVING PROBLEMS WITH POINTERED VARIABLES
DEBUG     = -g 
OPTIMIZE  = -O0
LISTING   = -Mlist
SPECIAL   = -byteswapio -Mbackslash
LDSPECIAL = -Wl,-noinhibit-exec 
#COMPILE   = mpif77 -c $(DEBUG) # or use $(OPTIMIZE)
COMPILE   = mpif77 -c $(OPTIMIZE) # or use $(DEBUG)
LOAD      = mpif77 -o $(NAME) $(LDSPECIAL) $(DEBUG) # Remove -m for optimize
#COMPILE   = mpif77 -c $(LISTING) $(SPECIAL) $(DEBUG) # or use $(OPTIMIZE)
#LOAD      = mpif77 -o $(NAME)  $(LDSPECIAL) $(DEBUG) -m # Remove -m for optimize
PROTECT   = chmod 755
DELETE    = rm -f

# The following gives suffixes to be used in checking for suffix rules.
# Written without dependencies, it may be useful to turn of such checking?
.SUFFIXES:

$(NAME):           $(OBJECTS)
	$(LOAD)    $(OBJECTS) $(LOCATION) $(LIBRARIES)
	$(PROTECT) $(NAME)

# Following use of pattern matching works; 
# it is based on statements in Sect. 10.7 of gmake Manual
# by Stallman and McGrath.
# However, the two rules following this seem clearer to me (BobH).
#%.o:               %.f        $(INCLUDES)
#	$(COMPILE) $< -o $@

$(SOURCES):        $(INCLUDES)

# see Sect. 4.10.1, Static Pattern Rules.
$(OBJECTS): %.o: %.f    $(INCLUDES)
	mpi/doparallel.py $< mpitmp.f mpi/mpins_par.f
	$(COMPILE) mpitmp.f -o $@

rebuild:
	$(COMPILE) $(SOURCES)
	$(LOAD) $(OBJECTS) $(LOCATION) $(LIBRARIES)

clean:
	$(DELETE)  $(NAME) $(OBJECTS) *.lst

